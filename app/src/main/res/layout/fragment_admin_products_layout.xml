<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/black_background_green_outline">

    <ListView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_highlight"
        android:layout_margin="@dimen/default_margin"
        android:id="@+id/listview_products"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_edit"
        style="@style/GreenBeansButton"
        android:layout_margin="@dimen/default_margin"
        android:text="@string/b_add_product"
        android:id="@+id/button_add"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/button_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_delete"
        style="@style/GreenBeansButton"
        android:layout_margin="@dimen/default_margin"
        android:text="@string/b_edit_product"
        android:id="@+id/button_edit"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/button_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/GreenBeansButton"
        android:layout_margin="@dimen/default_margin"
        android:text="@string/b_delete_product"
        android:id="@+id/button_delete"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_edit"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/GreenBeansButton"
        android:layout_margin="@dimen/default_margin"
        android:text="@string/b_highlight"
        android:id="@+id/button_highlight"/>

</androidx.constraintlayout.widget.ConstraintLayout>