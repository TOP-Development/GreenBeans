<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black_background_green_outline">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginEnd="@dimen/small_margin"
        style="@style/GreenBeansTitle"
        android:background="@color/greenbeans_secondary"
        android:layout_marginTop="@dimen/large_margin"
        android:text="@string/tv_deals_of_the_day"
        android:textAlignment="center"
        android:id="@+id/tv_deals_of_the_day"/>

    <androidx.viewpager.widget.ViewPager
        android:layout_height="@dimen/highlighted_product_view_pager_height"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_deals_of_the_day"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/greenbeans_secondary"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginEnd="@dimen/small_margin"
        android:id="@+id/pager_products_of_the_day" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/pager_products_of_the_day"
        app:layout_constraintStart_toStartOf="@id/pager_products_of_the_day"
        app:layout_constraintEnd_toEndOf="@id/pager_products_of_the_day"
        app:layout_constraintBottom_toBottomOf="@id/pager_products_of_the_day"
        android:id="@+id/button_pager_button"/>

    <ImageButton
        android:layout_width="@dimen/large_margin"
        android:layout_height="@dimen/large_margin"
        app:layout_constraintTop_toBottomOf="@id/button_pager_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_right"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_margin="@dimen/large_margin"
        android:src="@drawable/circle_left"
        android:id="@+id/button_left"/>

    <ImageButton
        android:layout_width="@dimen/large_margin"
        android:layout_height="@dimen/large_margin"
        android:src="@drawable/circle_right"
        app:layout_constraintTop_toBottomOf="@id/button_pager_button"
        app:layout_constraintStart_toEndOf="@id/button_left"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/large_margin"
        android:id="@+id/button_right"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/button_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_supplies"
        app:layout_constraintBottom_toTopOf="@id/button_concentrate"
        style="@style/GreenBeansButton"
        android:text="@string/b_clothing"
        android:layout_margin="@dimen/default_margin"
        android:id="@+id/button_clothing"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/button_right"
        app:layout_constraintStart_toEndOf="@id/button_clothing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_edibles"
        style="@style/GreenBeansButton"
        android:text="@string/b_supplies"
        android:layout_margin="@dimen/default_margin"
        android:id="@+id/button_supplies"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/button_clothing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_edibles"
        app:layout_constraintBottom_toTopOf="@id/button_cbd"
        style="@style/GreenBeansButton"
        android:text="@string/b_concentrate"
        android:layout_margin="@dimen/default_margin"
        android:id="@+id/button_concentrate"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/button_supplies"
        app:layout_constraintStart_toEndOf="@id/button_concentrate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_all_products"
        style="@style/GreenBeansButton"
        android:text="@string/b_edibles"
        android:layout_margin="@dimen/default_margin"
        android:id="@+id/button_edibles"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/button_concentrate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_all_products"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/GreenBeansButton"
        android:text="@string/b_cbd"
        android:layout_margin="@dimen/default_margin"
        android:id="@+id/button_cbd"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/button_edibles"
        app:layout_constraintStart_toEndOf="@id/button_cbd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/GreenBeansButton"
        android:text="@string/b_all_products"
        android:layout_margin="@dimen/default_margin"
        android:id="@+id/button_all_products"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.25"
        android:orientation="vertical"
        android:id="@+id/guideline_25"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="vertical"
        android:id="@+id/guideline_50"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.95"
        android:orientation="vertical"
        android:id="@+id/guideline_90"/>

</androidx.constraintlayout.widget.ConstraintLayout>